{
  "compilerOptions": {
    "module": "es2015",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "plugins": [
      { "name": "tslint-language-service" }
    ],
    "lib": [
      "es2015"
    ],
    "types": [
      "node",
      "lodash",
      "mocha",
      "chai",
      "sinon"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
